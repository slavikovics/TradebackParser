<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:TradebackParser.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="TradebackParser.Views.DownloadsView"
             x:DataType="viewModels:DownloadsViewModel">
    <StackPanel Orientation="Vertical">
        <TextBlock HorizontalAlignment="Center"
                   FontSize="25">Download items list</TextBlock>
        <Grid Margin="50">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0">
                <TextBlock HorizontalAlignment="Center">List of items as a SVG file</TextBlock>
                <Button CornerRadius="15"
                        Command="{Binding DownloadCsvFileCommand}"
                        HorizontalAlignment="Center" 
                        Margin="15">
                    <StackPanel Orientation="Vertical">
                        <Image Width="48" 
                               Height="48" Source="../Assets/CsvFile.png"/>
                        <TextBlock Margin="3 5 3 3" HorizontalAlignment="Center">CSV</TextBlock>
                    </StackPanel>
                </Button>
            </StackPanel>
            <StackPanel Grid.Column="1">
                <TextBlock HorizontalAlignment="Center">List of items as a SQLite database</TextBlock>
                <Button CornerRadius="15" 
                        HorizontalAlignment="Center" 
                        Margin="15">
                    <StackPanel Orientation="Vertical">
                        <Image Width="48" 
                               Height="48" Source="../Assets/Database.png"/>
                        <TextBlock Margin="3 5 3 3" HorizontalAlignment="Center">SQLite</TextBlock>
                    </StackPanel>
                </Button>
            </StackPanel>
            <StackPanel Grid.Column="2">
                <TextBlock HorizontalAlignment="Center">List of items as a TXT file</TextBlock>
                <Button CornerRadius="15" 
                        HorizontalAlignment="Center" 
                        Grid.Column="2"
                        Margin="15">
                <StackPanel Orientation="Vertical">
                    <Image Width="48" 
                           Height="48" Source="../Assets/TextFile.png"/>
                    <TextBlock Margin="3 5 3 3" HorizontalAlignment="Center">TXT</TextBlock>
                </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </StackPanel>
</UserControl>
